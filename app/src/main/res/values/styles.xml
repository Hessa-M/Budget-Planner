<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IncomeButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#4CAF50</item>
        <item name="colorButtonNormal">#80C883</item>
    </style>

    <style name="ExpensesButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#E60000</item>
        <item name="colorButtonNormal">#F15567</item>
    </style>

    <style name="Button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">#87A48D</item>
    </style>

    <style name="ExpenseSwitchTheme">
        <item name="colorControlActivated">@color/IncomeDark</item>
        <item name="colorSwitchThumbNormal">@color/ExpensesDark</item>
    </style>

</resources>
